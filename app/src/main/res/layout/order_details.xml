<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="end"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_orderName"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="اسم الطلب"
            android:layout_gravity="end"
            android:textColor="#333333"
            android:lineSpacingExtra="4sp"
            android:textSize="14sp"
            />
            <TextView
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:textColor="#777777"
                android:lineSpacingExtra="2sp"
                android:layout_gravity="end"
                android:text="6/9/2020"
                />
        </LinearLayout>

        <ImageView
            android:layout_marginStart="-70dp"
            android:layout_marginTop="20dp"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location"
            />
        <TextView
            android:id="@+id/tv_location"
            android:layout_marginStart="-120dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#222222"
            android:lineSpacingExtra="3sp"
            android:gravity="end"
            android:text="الرياض"
            />

        <TextView
            android:layout_marginStart="-180dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#222222"
            android:lineSpacingExtra="3sp"
            android:gravity="end"
            android:text="01452321"
            />
        <Button
            android:id="@+id/btn_details"
            android:layout_marginStart="-250dp"
            android:layout_marginTop="25dp"
            android:gravity="start"
            android:background="@drawable/ic_back"
            android:layout_width="18dp"
            android:layout_height="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#5db547"
            android:lineSpacingExtra="4sp"
            android:gravity="end"
            android:text="السعر بالريال"
            />
        <TextView
            android:layout_marginEnd="106dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#5db547"
            android:lineSpacingExtra="4sp"
            android:gravity="end"
            android:text="العدد"
            />
        <TextView
            android:layout_marginEnd="15dp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#5db547"
            android:lineSpacingExtra="4sp"
            android:gravity="end"
            android:text="نوع الطلب"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_order_details"
        />


    <LinearLayout
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_orderServiceCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#222222"
            android:lineSpacingExtra="3sp"
            android:gravity="end"
            android:text="10"
            android:layout_marginEnd="183dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#5db547"
            android:lineSpacingExtra="4sp"
            android:gravity="end"
            android:text="خدمة توصيل"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_orderTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#222222"
            android:lineSpacingExtra="3sp"
            android:gravity="end"
            android:text="185"
            android:layout_marginEnd="183dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#5db547"
            android:lineSpacingExtra="4sp"
            android:gravity="end"
            android:text="إجمالي المبلغ"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <Button
        android:id="@+id/btnOrderDelivery"
        android:layout_width="216dp"
        android:layout_height="40dp"
        android:background="@drawable/btnclickcolor"
        android:text="توصيل الطلب"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />
        <ImageButton
            android:id="@+id/btnCall"
            android:src="@drawable/ic_phone_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_call"
            android:layout_marginStart="10dp" />
    </LinearLayout>

</LinearLayout>